{
  "name": "@aragon/protocol-ethereum",
  "version": "1.5.0",
  "description": "Aragon Protocol Ethereum contracts",
  "author": "Aragon Association <legal@aragon.org>",
  "license": "GPL-3.0",
  "files": [
    "/abi",
    "/artifacts",
    "/contracts"
  ],
  "scripts": {
    "console": "buidler console",
    "compile": "buidler compile --force",
    "lint": "yarn lint:solidity && yarn lint:js",
    "lint:js": "eslint ./test ./scripts ./migrations",
    "lint:solidity": "solium --dir ./contracts",
    "test": "buidler test",
    "test:controller": "yarn test test/court/**/*.js test/court/*.js test/arbitration/*.js",
    "test:disputes": "yarn test test/disputes/disputes-create.js test/disputes/disputes-evidence.js test/disputes/disputes-draft.js",
    "test:appeals": "yarn test test/disputes/disputes-voting.js test/disputes/disputes-appeal.js test/disputes/disputes-confirm-appeal.js",
    "test:settle-rounds": "yarn test test/disputes/disputes-settle-round.js",
    "test:settle-appeals": "yarn test test/disputes/disputes-settle-appeal.js",
    "test:registry": "yarn test test/registry/*.js",
    "test:voting": "yarn test test/voting/*.js",
    "test:subscriptions": "yarn test test/subscriptions/*.js",
    "test:treasury": "yarn test test/treasury/court-treasury.js",
    "test:lib": "yarn test test/lib/*.js",
    "test:gas": "REPORT_GAS=true yarn test --network localhost",
    "coverage": "buidler coverage --network coverage",
    "abi:extract": "buidler-extract --output abi/ --keys abi",
    "prepublishOnly": "yarn compile && yarn abi:extract -- --no-compile"
  },
  "dependencies": {},
  "devDependencies": {
    "@aragon/contract-helpers-test": "^0.1.0",
    "@nomiclabs/buidler": "^1.4.3",
    "@nomiclabs/buidler-ganache": "^1.3.3",
    "@nomiclabs/buidler-truffle5": "^1.3.4",
    "@nomiclabs/buidler-web3": "^1.3.4",
    "buidler-extract": "^1.0.0",
    "buidler-gas-reporter": "^0.1.3",
    "chai": "^4.2.0",
    "eslint": "^5.6.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-unused-imports": "^0.1.0",
    "solidity-coverage": "^0.7.9",
    "solium": "^1.2.5",
    "web3": "1.2.1",
    "web3-eth-abi": "1.0.0-beta.33"
  }
}
